#include <stdio.h>

#define MAX_LIVROS 100

typedef struct {
    char titulo[50];
    char autor[50];
    int ano;
    int codigo;
} Livro;

int main() {
    Livro livros[MAX_LIVROS];
    int quantidade;

    printf("Quantos livros deseja cadastrar? ");
    scanf("%d", &quantidade);

    if (quantidade < 1 || quantidade > MAX_LIVROS) {
        printf("Quantidade inválida. O número deve estar entre 1 e %d.\n", MAX_LIVROS);
        return 1;
    }

    for (int i = 0; i < quantidade; i++) {
        printf("\nLivro %d:\n", i + 1);

        printf("Digite o título do livro: ");
        scanf(" %[^\n]", livros[i].titulo); // lê string com espaços

        printf("Digite o autor do livro: ");
        scanf(" %[^\n]", livros[i].autor); // lê string com espaços

        printf("Digite o ano de lançamento: ");
        scanf("%d", &livros[i].ano);

        printf("Digite o código do livro: ");
        scanf("%d", &livros[i].codigo);
    }

    // Listar os livros
    printf("\n--- Lista de Livros Cadastrados ---\n");
    for (int i = 0; i < quantidade; i++) {
        printf("Livro %d:\n", i + 1);
        printf("Título: %s\n", livros[i].titulo);
        printf("Autor: %s\n", livros[i].autor);
        printf("Ano de lançamento: %d\n", livros[i].ano);
        printf("Código: %d\n", livros[i].codigo);
        printf("-----------------------------\n");
    }

    return 0;
}
