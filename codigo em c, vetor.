// Declaração e inicialização
#include <stdio.h>

typedef struct {
    char nome[100];
    char autor[100];
    int ano;
} Livro;

int main() {

    Livro livros[5] = {
        {"Harry Potter", "J.K", 1999},
        {"Senhor Dos Aneis","Tolkien", 1955},
        {"Biblia", "Autores Diversos",0000},
        {"Corujinhas","Felipe Neto",2017},
        {"Red Dead Redemption 2","Arthur Morgan",1899}
};
// Acesso aos elementos
    for (int i = 0; i< 5; i++){
        printf("o livro %s do autor %s \n", livros[i].nome, livros[i].autor);
}
// Percorrendo o vetor
    for (int i = 0; i < 5; i++) {
        printf("livro %d: \"%s\" por %s, publicado em %d\n", i+1, livros[i].nome, livros[i].autor, livros[i].ano);
}

return 0;

}
